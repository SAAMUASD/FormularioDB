@model ProyectoCRUD.Models.Contacto

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Contacto</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    <h5>¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.Nombres) @Html.DisplayTextFor(m => m.Apellidos)?</h5>
                </div>
                <form action="@Url.Action("Eliminar","Contact")" method="post">
                    <!--el usuario no debe pq ver el id-->
                    <input type="hidden" class="form-control" name="IdContacto" value="@Html.DisplayNameFor(m=>m.IdContacto)" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Contact")">Volver</a>
                </form>
            </div>
    </div>
</div>
 </div>



